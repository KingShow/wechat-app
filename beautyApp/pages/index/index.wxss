/**index.wxss**/
.container{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
}
.slide-image{
    width: 100%;
}
.foodmenu{
    flex: 0 0 160rpx;
    width: 160rpx;
}
.foodwrap{
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
}
.menuitem{
    display: block;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #444;
    border-bottom: 1rpx solid #f5f5f5;
}
.active{
    color: red;
}
.foodlist{
    flex: 1;
    background-color: #f5f5f5;
    overflow-y: auto;
}
.fooditem{
    padding: 30rpx;
}
.fooditem image{
    width: 150rpx;
    height: 150rpx
}
